<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <!--
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/navigation_menu"
                app:menu="@menu/navigation_menu"
                android:layout_alignParentBottom="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
    -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/black"
            android:text="Logout"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/reach_emerg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FF3D00"
            android:drawableLeft="@drawable/emergency"
            android:padding="15dp"
            android:paddingHorizontal="16dp"
            android:text="Reach Emergency contact"
            app:layout_constraintTop_toBottomOf="@+id/btnlogout"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#FF3D00"
            android:drawableLeft="@drawable/baseline_add_alarm_24"
            android:padding="15dp"
            android:text="Sound Alarm"
            app:layout_constraintTop_toBottomOf="@+id/reach_emerg"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/health_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#0C8BF1"
            android:drawableLeft="@drawable/healthinfo"
            android:padding="15dp"
            android:text="Health Information"
            app:layout_constraintTop_toBottomOf="@+id/alarm"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#00B0FF"
            android:drawableLeft="@drawable/appointment"
            android:padding="15dp"
            android:text=" Appointment"
            app:layout_constraintTop_toBottomOf="@+id/health_info"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
